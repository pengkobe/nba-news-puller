{
    "manifest_version": 2,
    "name": "NBA-NEWS-PULLER",
    "description": "This extension build to pull nba news from nba.qq.com",
    "version": "1.0",
    "icons": {
        "16": "images/menu_logo.png",
        "48": "images/extension_logo.png",
        "128": "images/install_logo.png"
    },
    "browser_action": {
        "default_icon": "icon19.png",
        "default_popup": "popup.html",
        "default_title": "Click yipeng to pull!"
    },
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/"
    ]
}